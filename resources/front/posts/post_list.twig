{% extends "layout.twig" %}

{% block sidebar %}
    {% include '/partials/sidebar_posts.twig' %}
{% endblock %}

{% block content %}
    <div class="articles-page">
        <div class="page-header">
            <h1 class="page-title">Статьи о чае</h1>
            <p class="page-subtitle">Погрузитесь в мир чайных традиций и культуры</p>
        </div>

        <div class="container">
            <div class="articles-grid">
                {% for article in articles %}
                    <div class="article-card">
                        <div class="article-image-container">
                            {% if article.cover_image %}
                                <img src="{{ article.cover_image }}" alt="{{ article.title }}" class="article-image">
                            {% else %}
                                <div class="article-image-placeholder">
                                    <i class="bi bi-cup-hot"></i>
                                </div>
                            {% endif %}

                            <div class="article-category-badge">
                                {% if article.category %}
                                    <span class="category-tag">{{ article.category }}</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="article-card-body">
                            <div class="article-meta-info">
                                <span class="article-date">{{ article.date ?? "2025" }}</span>
                                {% if article.reading_time %}
                                    <span class="article-reading-time">{{ article.reading_time }} мин</span>
                                {% endif %}
                            </div>

                            <h3 class="article-title"><a href="/post/{{ article.id }}" style="text-decoration: none; color: inherit;">{{ article.title }}</a></h3>

                            <p class="article-description">{{ article.description }}</p>

                            <div class="article-card-footer">
                                <div class="article-tags">
                                    {% if article.tags %}
                                        {% for tag in article.tags|slice(0, 2) %}
                                            <span class="article-tag">{{ tag }}</span>
                                        {% endfor %}
                                        {% if article.tags|length > 2 %}
                                            <span class="article-tag-more">+{{ article.tags|length - 2 }}</span>
                                        {% endif %}
                                    {% endif %}
                                </div>

                                <a href="/post/{{ article.id }}" class="article-read-more" style="text-decoration: none;">
                                    <span>Читать</span>
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="no-articles-message">
                        <div class="empty-state">
                            <i class="bi bi-cup"></i>
                            <h4>Статьи пока не добавлены</h4>
                            <p>Скоро здесь появятся интересные материалы о чае</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if show_pagination %}
                <nav aria-label="Навигация по страницам">
                    <ul class="pagination justify-content-center mt-5">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" style="text-decoration: none;">
                                <i class="bi bi-chevron-left"></i>
                                Назад
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#" style="text-decoration: none;">1</a></li>
                        <li class="page-item"><a class="page-link" href="#" style="text-decoration: none;">2</a></li>
                        <li class="page-item"><a class="page-link" href="#" style="text-decoration: none;">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" style="text-decoration: none;">
                                Вперед
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
{% endblock %}