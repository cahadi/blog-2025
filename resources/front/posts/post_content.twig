{% extends 'layout.twig' %}

{% block sidebar %}
    {% include('/partials/sidebar_posts.twig') %}
{% endblock %}

{% block content %}
    <div class="article-full-content">
        <div class="article-header">
            <div class="article-breadcrumb">
                <a href="/posts" class="breadcrumb-link">
                    <i class="bi bi-arrow-left"></i>
                    К списку статей
                </a>
            </div>

            <h1 class="article-main-title">{{ post.title }}</h1>

            <div class="article-meta-header">
                <div class="meta-items">
                    <span class="meta-item">
                        <i class="bi bi-calendar"></i>
                        {{ post.created_at|date('d.m.Y') }}
                    </span>

                    {% if post.category %}
                        <span class="article-category-tag">{{ post.category }}</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if post.cover_image %}
            <div class="article-hero-image">
                <img src="{{ post.cover_image }}" alt="{{ post.title }}" class="hero-img">
                <div class="hero-overlay"></div>
            </div>
        {% endif %}

        <div class="article-content-wrapper">
            <div class="article-main-content">
                {{ post.content|raw }}
            </div>

            <div class="article-footer">
                {% if post.tags %}
                    <div class="article-tags-section">
                        <h3 class="tags-title">Теги:</h3>
                        <div class="tags-container">
                            {% for tag in post.tags %}
                                <span class="content-tag">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <div class="article-navigation">
                    <a href="/posts" class="back-to-list-btn">
                        <i class="bi bi-arrow-left"></i>
                        Вернуться к списку статей
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}