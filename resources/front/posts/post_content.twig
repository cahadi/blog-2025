{% extends 'layout.twig' %}

{% block sidebar %}
    {% include('/partials/sidebar_posts.twig') %}
{% endblock %}

{% block content %}
    <div class="article-full">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5 mb-0">{{ post.title }}</h1>
            <span class="badge bg-primary fs-6">{{ post.category }}</span>
        </div>

        <div class="article-meta">
            <img src="{{ post.coverImage }}" alt="{{ post.title }}" class="img-fluid rounded">
            <p class="mt-3 mb-0 text-muted"><strong>Описание:</strong> {{ post.description }}</p>
        </div>

        <div class="article-content">
            {{ post.content|raw }}
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="/posts" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Вернуться к списку статей
            </a>
            <div class="text-muted">
                <small>Опубликовано: {{ post.created_at|date('d.m.Y') }}</small>
            </div>
        </div>
    </div>
{% endblock %}