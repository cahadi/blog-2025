{% extends "layout.twig" %}

{% block title %}Панель управления - Статьи{% endblock %}

{% block sidebar %}
    {% include('/partials/sidebar_admin.twig') %}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Управление статьями</h1>
        <a href="/admin/post/create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Добавить статью
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-journal-text me-2"></i>Список статей
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Заголовок</th>
                        <th>Категория</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td><code>#{{ post.id }}</code></td>
                            <td>
                                <strong>{{ post.title }}</strong>
                                {% if post.description %}
                                    <br><small class="text-muted">{{ post.description }}</small>
                                {% endif %}
                            </td>
                            <td>
                                {% if post.category %}
                                    <span class="badge bg-success">{{ post.category }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">Сегодня</small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/post/edit/{{ post.id }}" class="btn btn-outline-success">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="POST" action="/admin/post/delete/{{ post.id }}" style="display: inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту статью?')">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="mt-2 text-muted">Статьи не найдены</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}