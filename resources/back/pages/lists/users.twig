{% extends "layout.twig" %}

{% block title %}Панель управления - Пользователи{% endblock %}

{% block sidebar %}
    {% include('/partials/sidebar_admin.twig') %}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Управление пользователями</h1>
        <a href="/admin/user/create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Добавить пользователя
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-people me-2"></i>Список пользователей
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Пользователь</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th>Статус</th>
                        <th>Дата регистрации</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><code>#{{ user.id }}</code></td>
                            <td>
                                <strong>{{ user.username }}</strong>
                            </td>
                            <td>
                                <small>{{ user.email }}</small>
                            </td>
                            <td>
                                {% if user.role == 'admin' %}
                                    <span class="badge bg-danger">Администратор</span>
                                {% elseif user.role == 'moderator' %}
                                    <span class="badge bg-warning text-dark">Модератор</span>
                                {% else %}
                                    <span class="badge bg-secondary">Пользователь</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success">Активен</span>
                                {% else %}
                                    <span class="badge bg-danger">Неактивен</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">{{ user.createdAt }}</small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/user/edit/{{ user.id }}" class="btn btn-outline-success">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if user.role != 'admin' %}
                                        <a href="/admin/user/delete/{{ user.id }}" class="btn btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="bi bi-person fs-1 text-muted"></i>
                                <p class="mt-2 text-muted">Пользователи не найдены</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}