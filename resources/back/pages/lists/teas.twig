{% extends "layout.twig" %}

{% block title %}Панель управления - Чай{% endblock %}

{% block sidebar %}
    {% include('/partials/sidebar_admin.twig') %}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Управление чаем</h1>
        <a href="/admin/tea/create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Добавить чай
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-cup-hot me-2"></i>Список чая
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Тип</th>
                        <th>Цена</th>
                        <th>Происхождение</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tea in teas %}
                        <tr>
                            <td><code>#{{ tea.id }}</code></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if tea.image %}
                                        <img src="{{ tea.image }}" alt="{{ tea.name }}" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                    {% endif %}
                                    <div>
                                        <strong>{{ tea.name }}</strong>
                                        {% if tea.description %}
                                            <br><small class="text-muted">{{ tea.description|length > 50 ? tea.description|slice(0, 50) ~ '...' : tea.description }}</small>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if tea.type %}
                                    <span class="badge bg-info">{{ tea.type }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ tea.getFormattedPrice() }}</strong>
                            </td>
                            <td>
                                {% if tea.origin %}
                                    <small class="text-muted">{{ tea.origin }}</small>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/tea/edit/{{ tea.id }}" class="btn btn-outline-success">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/admin/tea/delete/{{ tea.id }}" class="btn btn-outline-danger" onclick="return confirm('Вы уверены, что хотите удалить этот чай?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <i class="bi bi-cup fs-1 text-muted"></i>
                                <p class="mt-2 text-muted">Чай не найден</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}