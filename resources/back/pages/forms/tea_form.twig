{% extends "layout.twig" %}

{% block title %}{% if isEdit %}Редактирование чая{% else %}Добавление чая{% endif %}{% endblock %}

{% block sidebar %}
    {% include('/partials/sidebar_admin.twig') %}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            {% if isEdit %}Редактирование чая{% else %}Добавление нового чая{% endif %}
        </h1>
        <a href="/admin/teas" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-cup-hot me-2"></i>
                {% if isEdit %}Редактирование чая{% else %}Добавление нового чая{% endif %}
            </h5>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/tea/save">
                {% if isEdit %}
                    <input type="hidden" name="id" value="{{ tea.id }}">
                {% endif %}

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="name" class="form-label">Название чая</label>
                            <input type="text"
                                   class="form-control"
                                   id="name"
                                   name="name"
                                   value="{{ tea.name }}"
                                   required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="price" class="form-label">Цена (руб)</label>
                            <input type="number"
                                   class="form-control"
                                   id="price"
                                   name="price"
                                   value="{{ tea.price }}"
                                   step="0.01"
                                   required>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Описание</label>
                    <textarea class="form-control"
                              id="description"
                              name="description"
                              rows="3">{{ tea.description }}</textarea>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="category" class="form-label">Категория</label>
                            <input type="text"
                                   class="form-control"
                                   id="category"
                                   name="category"
                                   value="{{ tea.category }}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="type" class="form-label">Тип чая</label>
                            <select class="form-control" id="type" name="type">
                                <option value="">Выберите тип</option>
                                <option value="green" {% if tea.type == 'green' %}selected{% endif %}>Зеленый</option>
                                <option value="black" {% if tea.type == 'black' %}selected{% endif %}>Черный</option>
                                <option value="oolong" {% if tea.type == 'oolong' %}selected{% endif %}>Улун</option>
                                <option value="white" {% if tea.type == 'white' %}selected{% endif %}>Белый</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="origin" class="form-label">Страна происхождения</label>
                            <input type="text"
                                   class="form-control"
                                   id="origin"
                                   name="origin"
                                   value="{{ tea.origin }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="brew_time" class="form-label">Время заваривания</label>
                            <input type="text"
                                   class="form-control"
                                   id="brew_time"
                                   name="brew_time"
                                   value="{{ tea.brewTime }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="caffeine_level" class="form-label">Уровень кофеина (1-5)</label>
                            <select class="form-control" id="caffeine_level" name="caffeine_level">
                                <option value="1" {% if tea.caffeineLevel == 1 %}selected{% endif %}>1 - Низкий</option>
                                <option value="2" {% if tea.caffeineLevel == 2 %}selected{% endif %}>2</option>
                                <option value="3" {% if tea.caffeineLevel == 3 %}selected{% endif %}>3 - Средний</option>
                                <option value="4" {% if tea.caffeineLevel == 4 %}selected{% endif %}>4</option>
                                <option value="5" {% if tea.caffeineLevel == 5 %}selected{% endif %}>5 - Высокий</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Изображение чая</label>
                    <select class="form-control" id="image" name="image">
                        <option value="">Выберите изображение</option>
                        <option value="/media/tea/green1.jpg" {% if tea.image == '/media/tea/green1.jpg' %}selected{% endif %}>Зеленый чай 1</option>
                        <option value="/media/tea/green2.jpg" {% if tea.image == '/media/tea/green2.jpg' %}selected{% endif %}>Зеленый чай 2</option>
                        <option value="/media/tea/black1.jpg" {% if tea.image == '/media/tea/black1.jpg' %}selected{% endif %}>Черный чай 1</option>
                        <option value="/media/tea/black2.jpg" {% if tea.image == '/media/tea/black2.jpg' %}selected{% endif %}>Черный чай 2</option>
                        <option value="/media/tea/oolong1.jpg" {% if tea.image == '/media/tea/oolong1.jpg' %}selected{% endif %}>Улун 1</option>
                        <option value="/media/tea/white1.jpg" {% if tea.image == '/media/tea/white1.jpg' %}selected{% endif %}>Белый чай 1</option>
                        <option value="/media/tea/default.jpg" {% if tea.image == '/media/tea/default.jpg' %}selected{% endif %}>По умолчанию</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2">
                    <i class="bi bi-save me-2"></i>
                    {% if isEdit %}Сохранить изменения{% else %}Добавить чай{% endif %}
                </button>
            </form>
        </div>
    </div>
{% endblock %}