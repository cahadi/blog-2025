{% extends "layout.twig" %}

{% block title %}Панель управления - Дашборд{% endblock %}

{% block sidebar %}
    {% include('/partials/sidebar_admin.twig') %}
{% endblock %}

{% block content %}
    <div class="admin-dashboard">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-success mb-0">Панель управления</h1>
            <div class="d-flex align-items-center gap-3">
            <span class="text-dark">
                <i class="bi bi-person-circle me-2"></i>{{ username }}
        </span>
            </div>

            <!-- Статистика -->
            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card border-success h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-file-text fs-1 text-success"></i>
                            <h4 class="card-title mt-3">{{ posts|length }}</h4>
                            <p class="card-text text-muted">Всего статей</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-success h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-cup-hot fs-1 text-success"></i>
                            <h4 class="card-title mt-3">{{ teas|length }}</h4>
                            <p class="card-text text-muted">Виды чая</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-success h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-eye fs-1 text-success"></i>
                            <h4 class="card-title mt-3">0</h4>
                            <p class="card-text text-muted">Посетители сегодня</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
    </div>
{% endblock %}